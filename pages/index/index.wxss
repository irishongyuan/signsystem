  color: #094B29;
  -webkit-box-flex:1;-webkit-flex:1;flex:1;
  border-color: #F8F8F8;
}

.jointClassName {
  color: #004D26;
  font-size: 36rpx;
  margin-right: 16rpx;
}

.jointClass {
  border-width: 0 0 1rpx 0;
  border-color: #F8F8F8;
  border-style: solid;
  background-color: #FFF;
}

.jointClass navigator {
  height: 112rpx;
  padding-top: 0;
  padding-bottom: 0;
}

.jointClassInfo {
  width: 100%;
