}
.buttonView {
  position: fixed;
  bottom: 0;
  width:100%;
  background-color: #E3212C;
  border-radius: 0;
  color: #FFF;
  text-align: left;
  font-size: 40rpx;
}

.briefInfo {
  display: flex;
  text-align: center;
  padding: 16rpx;
  background-color: #FFF;
}
.courseInfo {
  color: #004D26;
  font-size: 30rpx;
  margin: 4rpx;
}

.courseName {
  font-size: 50rpx;
  margin: 4rpx;
}

.weui-cell__bd {
  color: #004D26;
  font-size: 37rpx;
}

image {
  width:40rpx;
  height:40rpx;
  display:flex;
  margin-left:2rpx;
}

.displayRecord {
  display:flex;
  justify-content:center;
  margin-top:3rpx;
  flex-wrap:wrap;
  alignItems:flex-start;
